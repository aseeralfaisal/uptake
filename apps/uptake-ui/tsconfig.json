{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"strictNullChecks": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"types": ["jest", "node"],
		"paths": {
            "@components/*": ["apps/uptake-ui/components/*"],
            "@layouts/*": ["apps/uptake-ui/layouts/*"],
            "@modules/*": ["apps/uptake-ui/modules/*"],
			"@uptake-ui-avatar": ["libs/avatar/src/index.ts"],
			"@uptake-ui-avatar-group": ["libs/avatar-group/src/index.ts"],
			"@uptake-ui-avatar-label": ["libs/avatar-label/src/index.ts"],
			"@uptake-ui-badge-group": ["libs/badge-group/src/index.ts"],
			"@uptake-ui-breadcrumb": ["libs/breadcrumb/src/index.ts"],
			"@uptake-ui-button": ["libs/button/src/index.ts"],
			"@uptake-ui-button-group": ["libs/button-group/src/index.ts"],
			"@uptake-ui-checkbox": ["libs/checkbox/src/index.ts"],
			"@uptake-ui-chip": ["libs/chip/src/index.ts"],
			"@uptake-ui-confirmation-modal": ["libs/confirmation-modal/src/index.ts"],
			"@uptake-ui-date-picker": ["libs/date-picker/src/index.ts"],
			"@uptake-ui-date-range-picker": ["libs/date-range-picker/src/index.ts"],
			"@uptake-ui-drop-down": ["libs/drop-down/src/index.ts"],
			"@uptake-ui-empty": ["libs/empty/src/index.ts"],
			"@uptake-ui-icon-bubble": ["libs/icon-bubble/src/index.ts"],
			"@uptake-ui-icon-button": ["libs/icon-button/src/index.ts"],
            "@uptake-ui-icons": ["libs/icons/src/index.ts"],
			"@uptake-ui-input": ["libs/input/src/index.ts"],
			"@uptake-ui-loading": ["libs/loading/src/index.ts"],
			"@uptake-ui-metrics": ["libs/metrics/src/index.ts"],
			"@uptake-ui-modal": ["libs/modal/src/index.ts"],
			"@uptake-ui-multiple-checker-list": ["libs/multiple-checker-list/src/index.ts"],
            "@uptake-ui-navbar": ["libs/navbar/src/index.ts"],
			"@uptake-ui-pagination": ["libs/pagination/src/index.ts"],
			"@uptake-ui-progress-bar": ["libs/progress-bar/src/index.ts"],
			"@uptake-ui-progress-circle": ["libs/progress-circle/src/index.ts"],
			"@uptake-ui-progress-steps": ["libs/progress-steps/src/index.ts"],
			"@uptake-ui-radio": ["libs/radio/src/index.ts"],
			"@uptake-ui-social-buttons": ["libs/social-buttons/src/index.ts"],
			"@uptake-ui-switch": ["libs/switch/src/index.ts"],
			"@uptake-ui-table": ["libs/table/src/index.ts"],
			"@uptake-ui-tabs": ["libs/tabs/src/index.ts"],
			"@uptake-ui-textarea": ["libs/textarea/src/index.ts"],
			"@uptake-ui-time-picker": ["libs/time-picker/src/index.ts"],
			"@uptake-ui-uploader": ["libs/uploader/src/index.ts"],
            "@uptake-ui-utils": ["libs/utils/src/index.ts"]
        }
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
	"exclude": ["node_modules", "jest.config.ts"]
}
